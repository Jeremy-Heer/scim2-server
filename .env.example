# Spring Boot Application Configuration
SPRING_APPLICATION_NAME=scim2-server

# Server Configuration
SERVER_PORT=9080
SERVER_CONTEXT_PATH=/

# SSL Configuration
SSL_ENABLED=true
SSL_KEYSTORE_PATH=certs/keystore.pfx
SSL_KEYSTORE_TYPE=PKCS12
SSL_KEYSTORE_PASSWORD=changeit

# Swagger UI Configuration
SPRINGDOC_API_DOCS_PATH=/v3/api-docs
SPRINGDOC_SWAGGER_UI_PATH=/swagger-ui.html
SPRINGDOC_SWAGGER_UI_ENABLED=true

# SCIM Configuration
SCIM_DATA_DIRECTORY=data
SCIM_AUTH_TOKEN=scim-token-123

# SCIM Backend Configuration
# Options: json, ldap
SCIM_BACKEND_TYPE=ldap

# LDAP Backend Configuration
LDAP_ENABLED=true
LDAP_URL=ldap://localhost:8389
LDAP_BIND_DN=cn=Directory Manager
LDAP_BIND_PASSWORD=password
LDAP_BASE_DN=dc=quinn,dc=net
LDAP_USER_BASE_DN=ou=Users,dc=quinn,dc=net
LDAP_GROUP_BASE_DN=ou=Groups,dc=quinn,dc=net

# LDAP Connection Pool Settings
LDAP_POOL_INITIAL_CONNECTIONS=2
LDAP_POOL_MAX_CONNECTIONS=10
LDAP_POOL_MAX_CONNECTION_AGE_MILLIS=3600000
LDAP_POOL_HEALTH_CHECK_INTERVAL_MILLIS=60000

# LDAP Search Settings
LDAP_SEARCH_SIZE_LIMIT=1000
LDAP_SEARCH_TIME_LIMIT_SECONDS=30
LDAP_USE_ENTRY_UUID_DN=true

# Logging Levels
LOG_LEVEL_SCIM2=DEBUG
LOG_LEVEL_SECURITY=DEBUG
LOG_LEVEL_SPRINGDOC=DEBUG
LOG_LEVEL_WEB=DEBUG
LOG_LEVEL_COYOTE=DEBUG

# HTTP Request/Response Logging
LOG_LEVEL_HTTP_INTERCEPTOR=INFO
LOG_LEVEL_HTTP_FILTER=INFO

# Server Encoding
SERVER_ENCODING_CHARSET=UTF-8
SERVER_ENCODING_ENABLED=true
SERVER_ENCODING_FORCE=true

# Log Patterns
LOG_PATTERN_CONSOLE=%d{yyyy-MM-dd HH:mm:ss} - %msg%n
LOG_PATTERN_FILE=%d{yyyy-MM-dd HH:mm:ss} [%thread] %-5level %logger{36} - %msg%n
